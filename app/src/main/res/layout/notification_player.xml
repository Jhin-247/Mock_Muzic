<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_theme_color">

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/segoe_ui"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:text="Over the Horizon" />

    <TextView
        android:id="@+id/tv_song_ft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_song_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/segoe_ui"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="Over the Horizon" />

    <ProgressBar
        android:id="@+id/timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_song_ft"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp" />

    <ImageView
        android:id="@+id/song_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/timer"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/functions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/song_image_view"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_play_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            android:src="@drawable/ic_prev" />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/btn_play_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            android:src="@drawable/ic_next" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            android:src="@drawable/ic_close" />

    </LinearLayout>

</RelativeLayout>